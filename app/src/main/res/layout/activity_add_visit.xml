<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_grey"
    tools:context=".AddVisit">

    <TextView
        android:id="@+id/nearYouTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/stand_layout_margin_extended"
        android:layout_marginTop="@dimen/stand_layout_margin_extended"
        android:text="@string/InputFieldText"
        android:textColor="@color/black"
        android:textSize="@dimen/increased_text_size"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/stand_layout_margin_super_extended"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nearYouTitle"
        app:srcCompat="@drawable/travel" />

    <EditText
        android:id="@+id/editLocation"
        android:layout_width="325dp"
        android:layout_height="54dp"
        android:layout_marginTop="236dp"
        android:autofillHints=""
        android:background="@drawable/curved_edit_text"
        android:ems="10"
        android:hint="@string/InputFieldText"
        android:inputType=""
        android:padding="@dimen/stand_padding"
        android:textSize="@dimen/stand_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/add_place"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/nul"
        android:text="@string/Submit"
        android:textAllCaps="false"
        app:layout_constraintBottom_toTopOf="@+id/cancel_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/light_red"
        android:theme="@style/Button.Transparent"
        android:stateListAnimator="@null"
        android:layout_marginBottom="@dimen/min_layout_margin_shorter"
        android:text="@string/Cancel"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>